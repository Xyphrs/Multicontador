<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonresetall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bigreset"
        android:background="@color/bigreset"
        app:layout_constraintBottom_toTopOf="@+id/boton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text1"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suma"
        android:background="@color/sumas"
        app:layout_constraintBottom_toTopOf="@+id/boton2"
        app:layout_constraintTop_toBottomOf="@id/botonresetall"
        app:layout_constraintLeft_toRightOf="@id/text2"
        app:layout_constraintRight_toLeftOf="@id/botonr1" />


    <Button
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suma"
        android:background="@color/sumas"
        app:layout_constraintBottom_toTopOf="@id/boton3"
        app:layout_constraintTop_toBottomOf="@+id/boton1"
        app:layout_constraintLeft_toRightOf="@id/text3"
        app:layout_constraintRight_toLeftOf="@id/botonr2" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suma"
        android:background="@color/sumas"
        app:layout_constraintBottom_toTopOf="@id/boton4"
        app:layout_constraintTop_toBottomOf="@+id/boton2"
        app:layout_constraintLeft_toRightOf="@id/text4"
        app:layout_constraintRight_toLeftOf="@id/botonr3" />

    <Button
        android:id="@+id/boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suma"
        android:background="@color/sumas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton3"
        app:layout_constraintLeft_toRightOf="@id/text5"
        app:layout_constraintRight_toLeftOf="@id/botonr4" />

    <Button
        android:id="@+id/botonr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="@color/resets"
        app:layout_constraintBottom_toTopOf="@+id/boton2"
        app:layout_constraintTop_toBottomOf="@id/botonresetall"
        app:layout_constraintLeft_toRightOf="@id/boton1"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/botonr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="@color/resets"
        app:layout_constraintBottom_toTopOf="@id/boton3"
        app:layout_constraintTop_toBottomOf="@+id/boton1"
        app:layout_constraintLeft_toRightOf="@id/boton2"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/botonr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="@color/resets"
        app:layout_constraintBottom_toTopOf="@id/boton4"
        app:layout_constraintTop_toBottomOf="@+id/boton2"
        app:layout_constraintLeft_toRightOf="@id/boton3"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/botonr4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="@color/resets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton3"
        app:layout_constraintLeft_toRightOf="@id/boton4"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/boton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/botonresetall"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/boton2"
        app:layout_constraintTop_toBottomOf="@+id/botonresetall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/boton1"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/boton3"
        app:layout_constraintTop_toBottomOf="@+id/boton1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/boton2"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/boton4"
        app:layout_constraintTop_toBottomOf="@+id/boton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/boton3"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/boton4"/>

</androidx.constraintlayout.widget.ConstraintLayout>